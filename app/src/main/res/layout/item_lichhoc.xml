<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hust.nhatlx.mysishust.BangDiem_Activity">


    <TextView
        android:id="@+id/txtThoiGian_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Thứ 2, 9h30 - 12h30"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTenLop_item"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Điện tử số"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtThoiGian_item" />

    <TextView
        android:id="@+id/txtLoaiLop_item"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="TN+BT"
        app:layout_constraintRight_toLeftOf="@+id/txtPhongHoc_item"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txtThoiGian_item"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/txtPhongHoc_item"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:text="TC-5123"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtThoiGian_item" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenLop_item" />
</android.support.constraint.ConstraintLayout>
